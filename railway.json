{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "cron": [
    {
      "name": "Generate AI Insights",
      "schedule": "0 9 * * *",
      "command": "curl -X GET https://inventory-advisor-production.up.railway.app/api/cron/insights -H 'Authorization: Bearer ${CRON_SECRET}'"
    }
  ]
}

